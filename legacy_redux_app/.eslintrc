{
  "extends": ["react-app", "prettier"],
  "plugins": ["react", "prettier"],
  "rules": {
    "prettier/prettier": [
      "warn",
      {
        "trailingComma": "none",
        "arrowParens": "always",
        "singleQuote": false,
        "semi": false,
        "tabWidth": 2,
        "endOfLine": "auto",
        "useTabs": false,
        "jsxSingleQuote": false,
        "printWidth": 80
      }
    ]
  }
}
